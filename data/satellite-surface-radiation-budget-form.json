[{"name": "product_family", "label": "Product family", "help": "<p><strong>CLARA product family</strong> refers to EUMETSAT CM SAF CLARA dataset, with additional variables and time coverage funded by the Copernicus Climate Change Service (C3S). CM SAF recommends the use of CLARA-A3.</p> <p><strong>CCI product family</strong> refers to the ESA Cloud_cci surface radiation, with additional time range funded by the Copernicus Climate Change Servive (C3S).</p>", "required": true, "css": "todo", "type": "StringChoiceWidget", "details": {"values": ["clara_a2", "clara_a3", "cci"], "columns": 1, "labels": {"clara_a2": "CLARA-A2 (CM SAF cLoud, Albedo and surface RAdiation dataset from AVHRR data)", "clara_a3": "CLARA-A3 (CM SAF cLoud, Albedo and surface RAdiation dataset from AVHRR data)", "cci": "CCI (Climate Change Initiative)"}}, "id": 0}, {"name": "origin", "label": "Origin", "help": "Service, project or organisation in charge of the production of data. There are 3 origins or producers in this dataset: C3S, EUMETSAT, ESA. <br> The C3S origin acts as an extension of the previous provider, keeping the same sensors and algorithms but providing a time extension for each.", "required": true, "css": "todo", "type": "StringChoiceWidget", "details": {"values": ["eumetsat", "c3s", "esa"], "columns": 1, "labels": {"eumetsat": "EUMETSAT (European Organisation for the Exploitation of Meteorological Satellites)", "c3s": "C3S (Copernicus Climate Change Service)", "esa": "ESA (European Space Agency)"}}, "id": 1}, {"name": "variable", "label": "Variable", "help": "There are two families of variables: CLARA product (Edition 2 & 3) and CCI product. <br> Both families contain the same 7 variables, but variables of the CLARA product can be downloaded individually, whereas variables of the CCI product are provided all together in a single netCDF file.", "required": true, "css": "todo", "type": "StringListWidget", "details": {"values": ["surface_upwelling_shortwave_flux", "surface_upwelling_longwave_flux", "surface_downwelling_shortwave_flux", "surface_downwelling_longwave_flux", "surface_net_downward_shortwave_flux", "surface_net_downward_longwave_flux", "surface_net_downward_radiative_flux", "all_variables"], "columns": 1, "labels": {"surface_upwelling_shortwave_flux": "Surface upwelling shortwave  flux", "surface_upwelling_longwave_flux": "Surface upwelling longwave  flux", "surface_downwelling_shortwave_flux": "Surface downwelling shortwave  flux", "surface_downwelling_longwave_flux": "Surface downwelling longwave  flux", "surface_net_downward_shortwave_flux": "Surface net downward shortwave  flux", "surface_net_downward_longwave_flux": "Surface net downward longwave  flux", "surface_net_downward_radiative_flux": "Surface net downward radiative flux", "all_variables": "All variables (CCI product family)"}}, "id": 2}, {"name": "sensor_on_satellite", "label": "Sensor on satellite for CCI product family", "help": "<p><strong>CCI product family</strong><br> ATSR2 (Along-Track Scanning Radiometer 2) on ERS-2<br> AATSR (Advanced Along-Track Scanning Radiometer) on Envisat<br> SLSTR (Sea and Land Surface Temperature Radiometer) on Sentinel 3A and 3B</p>", "required": true, "css": "todo", "type": "StringListWidget", "details": {"values": ["aatsr_on_envisat", "atsr2_on_ers2", "slstr_on_sentinel_3a", "slstr_on_sentinel_3b", "slstr_on_sentinel_3a_3b"], "columns": 3, "labels": {"aatsr_on_envisat": "AATSR on ENVISAT", "atsr2_on_ers2": "ATSR2 on ERS2", "slstr_on_sentinel_3a": "SLSTR on Sentinel-3A", "slstr_on_sentinel_3b": "SLSTR on Sentinel-3B", "slstr_on_sentinel_3a_3b": "SLSTR on Sentinel-3A & 3B"}}, "id": 3}, {"name": "climate_data_record_type", "label": "Climate data record type", "help": "Both the ICDR and the TCDR parts of each product family were generated using the same software and algorithms. The TCDR is intended to have sufficient length, consistency, and continuity to detect climate variability and change. The ICDR provides a short-delay access to current data where consistency with the CDR baseline is expected but was not extensively checked.", "required": true, "css": "todo", "type": "StringChoiceWidget", "details": {"values": ["interim_climate_data_record", "thematic_climate_data_record"], "columns": 1, "labels": {"interim_climate_data_record": "Interim Climate Data Record (ICDR)", "thematic_climate_data_record": "Thematic Climate Data Record (TCDR)"}}, "id": 4}, {"name": "time_aggregation", "label": "Time aggregation", "help": "Daily means are only available for the variable surface downwelling shortwave flux of the CLARA product family.", "required": true, "css": "todo", "type": "StringChoiceWidget", "details": {"values": ["monthly_mean", "daily_mean"], "columns": 1, "labels": {"monthly_mean": "Monthly mean", "daily_mean": "Daily mean"}}, "id": 5}, {"name": "year", "label": "Year", "help": null, "required": true, "css": "todo", "type": "StringListWidget", "details": {"values": ["1979", "1980", "1981", "1982", "1983", "1984", "1985", "1986", "1987", "1988", "1989", "1990", "1991", "1992", "1993", "1994", "1995", "1996", "1997", "1998", "1999", "2000", "2001", "2002", "2003", "2004", "2005", "2006", "2007", "2008", "2009", "2010", "2011", "2012", "2013", "2014", "2015", "2016", "2017", "2018", "2019", "2020", "2021", "2022", "2023"], "columns": 6, "labels": {"1979": "1979", "1980": "1980", "1981": "1981", "1982": "1982", "1983": "1983", "1984": "1984", "1985": "1985", "1986": "1986", "1987": "1987", "1988": "1988", "1989": "1989", "1990": "1990", "1991": "1991", "1992": "1992", "1993": "1993", "1994": "1994", "1995": "1995", "1996": "1996", "1997": "1997", "1998": "1998", "1999": "1999", "2000": "2000", "2001": "2001", "2002": "2002", "2003": "2003", "2004": "2004", "2005": "2005", "2006": "2006", "2007": "2007", "2008": "2008", "2009": "2009", "2010": "2010", "2011": "2011", "2012": "2012", "2013": "2013", "2014": "2014", "2015": "2015", "2016": "2016", "2017": "2017", "2018": "2018", "2019": "2019", "2020":